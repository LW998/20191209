CREATE TABLE user (
  uid int NOT NULL auto_increment COMMENT '用户ID',
  name varchar(32) default NULL COMMENT '用户名',
  pwd varchar(32) default NULL COMMENT '密码',
  addr varchar(100) default NULL COMMENT '公司地址',
  tel varchar(13) default NULL COMMENT '联系电话',
  PRIMARY KEY(uid)
) auto_increment =10 ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='用户表';

CREATE TABLE goods (
  gid int NOT NULL auto_increment COMMENT '商品ID',
  gname varchar(32) not NULL COMMENT '商品名',
  price varchar(20) not NULL   COMMENT '价格',
  author varchar(32) not NULL COMMENT '作者',
  publish varchar(32) not NULL COMMENT '出版社',
  img varchar(50) not NULL   COMMENT '图片',
  PRIMARY KEY (gid)
) auto_increment =101 ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='商品表';

